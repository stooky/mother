---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config/site';
---

<Layout title="About" description={`Learn more about ${siteConfig.name}`}>
  <section class="py-24">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-3xl text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
          About Us
        </h1>
        <p class="mt-6 text-lg text-gray-600">
          {siteConfig.tagline}
        </p>
      </div>

      <div class="mx-auto mt-16 max-w-3xl">
        <div class="prose prose-lg mx-auto">
          <p>
            Welcome to {siteConfig.name}. We are dedicated to providing excellent service
            to our customers and community.
          </p>
          <p>
            Our team brings years of experience and a commitment to quality in everything we do.
            We believe in building lasting relationships with our clients through trust,
            transparency, and exceptional results.
          </p>
          <h2>Our Mission</h2>
          <p>
            To deliver outstanding value and service while maintaining the highest standards
            of professionalism and integrity.
          </p>
          <h2>Why Choose Us?</h2>
          <ul>
            <li>Experienced and knowledgeable team</li>
            <li>Customer-focused approach</li>
            <li>Quality service guaranteed</li>
            <li>Competitive pricing</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</Layout>
