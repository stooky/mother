---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config/site';
---

<Layout title="Contact" description={`Get in touch with ${siteConfig.name}`}>
  <section class="py-24">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-3xl text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
          Contact Us
        </h1>
        <p class="mt-6 text-lg text-gray-600">
          We'd love to hear from you. Get in touch with us today.
        </p>
      </div>

      <div class="mx-auto mt-16 grid max-w-5xl gap-12 lg:grid-cols-2">
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-bold text-gray-900">Get in Touch</h2>
          <p class="mt-4 text-gray-600">
            Have questions? We're here to help. Reach out to us using any of the methods below.
          </p>

          <dl class="mt-8 space-y-6">
            <div class="flex gap-4">
              <dt class="flex-shrink-0">
                <span class="sr-only">Phone</span>
                <svg class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                </svg>
              </dt>
              <dd>
                <a href={`tel:${siteConfig.contact.phone}`} class="text-gray-900 hover:text-primary-600">
                  {siteConfig.contact.phone}
                </a>
              </dd>
            </div>

            <div class="flex gap-4">
              <dt class="flex-shrink-0">
                <span class="sr-only">Email</span>
                <svg class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
              </dt>
              <dd>
                <a href={`mailto:${siteConfig.contact.email}`} class="text-gray-900 hover:text-primary-600">
                  {siteConfig.contact.email}
                </a>
              </dd>
            </div>

            <div class="flex gap-4">
              <dt class="flex-shrink-0">
                <span class="sr-only">Address</span>
                <svg class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                </svg>
              </dt>
              <dd class="text-gray-600">
                {siteConfig.contact.address.street}<br />
                {siteConfig.contact.address.city}, {siteConfig.contact.address.state} {siteConfig.contact.address.zip}
              </dd>
            </div>
          </dl>

          <!-- Hours -->
          <div class="mt-8">
            <h3 class="text-lg font-semibold text-gray-900">Business Hours</h3>
            <dl class="mt-4 space-y-2 text-sm">
              <div class="flex justify-between">
                <dt class="text-gray-600">Monday</dt>
                <dd class="text-gray-900">{siteConfig.hours.monday}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-600">Tuesday</dt>
                <dd class="text-gray-900">{siteConfig.hours.tuesday}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-600">Wednesday</dt>
                <dd class="text-gray-900">{siteConfig.hours.wednesday}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-600">Thursday</dt>
                <dd class="text-gray-900">{siteConfig.hours.thursday}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-600">Friday</dt>
                <dd class="text-gray-900">{siteConfig.hours.friday}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-600">Saturday</dt>
                <dd class="text-gray-900">{siteConfig.hours.saturday}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-600">Sunday</dt>
                <dd class="text-gray-900">{siteConfig.hours.sunday}</dd>
              </div>
            </dl>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="rounded-2xl bg-gray-50 p-8">
          <h2 class="text-2xl font-bold text-gray-900">Send a Message</h2>
          <form class="mt-6 space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
              />
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700">Phone</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full rounded-lg bg-primary-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-primary-500 transition-colors"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
